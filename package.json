{
  "name": "nondevtaskkiller",
  "displayName": "Copilot-Powered Productivity",
  "description": "VS Code extension with 5 core productivity tools: Email Refine, Translate (English â†” Chinese), Jira Refine, PlantUML Preview, and AI-powered UML Designer. Features modular architecture, diff/split views, keyboard shortcuts, comprehensive settings, and privacy-focused analytics.",
  "version": "0.0.10",
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist/",
    "src/tools/ui/js/",
    "src/tools/ui/css/",
    "icon.png",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "contributes": {
    "languages": [
      {
        "id": "umlchat",
        "aliases": ["UML Chat Session", "umlchat"],
        "extensions": [".umlchat"],
        "configuration": "./language-configuration.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "umlChatDesigner.editor",
        "displayName": "UML Chat Designer",
        "selector": [
          {
            "filenamePattern": "*.umlchat"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "copilotTools.refineEmail",
        "title": "Refine Email (with Subject Suggestions)"
      },
      {
        "command": "copilotTools.translateText",
        "title": "Translate Text (English <-> Chinese)"
      },
      {
        "command": "copilotTools.refineJira",
        "title": "Refine Jira Issue Description"
      },
      {
        "command": "copilotTools.openSettings",
        "title": "Copilot Tools: Open Settings"
      },

      {
        "command": "copilotTools.previewSmartPlantUML",
        "title": "Smart PlantUML Preview (Auto-detect)"
      },
      {
        "command": "extension.umlChatPanel",
        "title": "UML Chat Designer (AI-powered)"
      },
      {
        "command": "extension.openUmlChatFile",
        "title": "Open UML Chat Session"
      },
      {
        "command": "copilotTools.configurePlantUML",
        "title": "Configure PlantUML (Manual Override)"
      },
      {
        "command": "copilotTools.showAnalytics",
        "title": "Show Usage Analytics Dashboard"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "copilotTools.refineEmail",
          "when": "editorHasSelection"
        },
        {
          "command": "copilotTools.translateText",
          "when": "editorHasSelection"
        },
        {
          "command": "copilotTools.refineJira",
          "when": "editorHasSelection"
        },

        {
          "command": "copilotTools.previewSmartPlantUML",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.openUmlChatFile",
          "when": "resourceExtname == .umlchat",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "copilotTools.refineEmail",
        "key": "ctrl+alt+e",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "copilotTools.translateText",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "copilotTools.refineJira",
        "key": "ctrl+alt+j",
        "when": "editorTextFocus && editorHasSelection"
      },

      {
        "command": "copilotTools.previewSmartPlantUML",
        "key": "ctrl+alt+shift+u",
        "when": "editorTextFocus"
      },
      {
        "command": "copilotTools.configurePlantUML",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "properties": {
        "copilotTools.apiKey": {
          "type": "string",
          "description": "API key for Copilot/LLM"
        },
        "copilotTools.translation.defaultChinese": {
          "type": "string",
          "enum": [
            "Simplified",
            "Traditional"
          ],
          "default": "Simplified",
          "description": "Default Chinese output (Simplified or Traditional)"
        },
        "copilotTools.features.emailRefine": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Email Refine tool"
        },
        "copilotTools.features.translate": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Translate tool"
        },
        "copilotTools.features.jiraRefine": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Jira Refine tool"
        },
        "plantuml.jarPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Optional. The full path to a local plantuml.jar file. If not set, the extension will attempt to download the latest version automatically."
        },
        "plantuml.layoutEngine": {
          "type": "string",
          "enum": [
            "dot",
            "smetana"
          ],
          "default": "dot",
          "description": "Layout engine for PlantUML diagrams. The extension automatically detects and configures the best available option on first run: 'dot' (Graphviz) for high-quality layouts if available, otherwise 'smetana' (pure Java) as fallback.",
          "enumDescriptions": [
            "Graphviz DOT engine - High quality layouts, auto-detected if available",
            "Smetana engine - Pure Java fallback when DOT is not available"
          ]
        },
        "plantuml.dotPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to the DOT executable (auto-detected on first run if available). Only used when layoutEngine is 'dot'. Leave empty to use auto-detected path or system PATH.",
          "scope": "machine-overridable"
        },
        "plantuml.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show PlantUML layout engine status in the status bar for quick visibility and configuration."
        },
        "umlChatDesigner.plantuml.svg.fontsize": {
          "type": "number",
          "default": 14,
          "minimum": 8,
          "maximum": 72,
          "description": "Font size for SVG output (in points). Higher values produce larger, more readable text."
        },
        "umlChatDesigner.plantuml.svg.minlen": {
          "type": "number",
          "default": 1,
          "minimum": 0.5,
          "maximum": 10,
          "description": "Minimum edge length for SVG layout. Higher values create more spaced-out diagrams."
        },
        "umlChatDesigner.plantuml.svg.dpi": {
          "type": "number",
          "default": 96,
          "minimum": 72,
          "maximum": 300,
          "description": "DPI (dots per inch) for SVG rendering. Higher values produce sharper output."
        },
        "umlChatDesigner.plantuml.java.heapSize": {
          "type": "string",
          "default": "1024m",
          "pattern": "^[0-9]+[kmgKMG]?$",
          "description": "Java heap size for PlantUML rendering (e.g., '512m', '2g'). Increase for large diagrams."
        },
        "umlChatDesigner.plantuml.commandArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional command-line arguments for PlantUML JAR execution."
        },
        "umlChatDesigner.plantuml.jarArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional JVM arguments for PlantUML JAR execution (e.g., '-Dfile.encoding=UTF-8')."
        },
        "copilotTools.analytics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable usage analytics to track feature usage and improve the extension. Data is stored locally and never transmitted."
        },
        "copilotTools.analytics.detailedLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed logging of analytics events to the console (for development and debugging)."
        },
        "umlChatDesigner.features.mermaidEngine": {
          "type": "boolean",
          "default": false,
          "description": "Enable Mermaid diagram engine support (experimental)"
        },
        "umlChatDesigner.features.mermaidFormatDetection": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic Mermaid format detection"
        },
        "umlChatDesigner.features.mermaidUI": {
          "type": "boolean",
          "default": false,
          "description": "Enable Mermaid-specific UI enhancements"
        },
        "umlChatDesigner.features.mermaidAnalytics": {
          "type": "boolean",
          "default": false,
          "description": "Enable analytics for Mermaid feature usage"
        },
        "copilotTools.llm.preferredModels": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["copilot"],
          "description": "Ordered model preference list. First available will be used; falls back automatically."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:ui": "./scripts/test-ui-ux-enhancements.sh"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cute-spring/my61.git"
  },
  "dependencies": {
    "@types/mermaid": "^9.2.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.10.0",
    "marked": "^15.0.12",
    "mermaid": "^10.6.1",
    "uuid": "^11.1.0"
  }
}
